# Use the latest stable version of npm
engine-strict = true

# Set the default package registry to npm
registry = https://registry.npmjs.org/

# Save exact versions of dependencies
save-exact = true

# Enable strict SSL (recommended for security)
strict-ssl = true

# Set the maximum number of simultaneous connections to the registry
fetch-retry-maxtimeout = 60000

# Use workspaces if applicable
workspace-conventions = ["packages/*"]

# Enable package-lock file generation
package-lock = true

# Add a custom cache folder to speed up installations
cache = ~/.npm-cache

# Configure logging level (e.g., error, warn, info, http, verbose, silly)
loglevel = info

# Automatically install peer dependencies
auto-install-peers = true

# Use a lockfile to ensure consistent installs
lockfile = true

# Link local workspace packages
link-workspace-packages = true

# Enforce provenance for packages
provenance = true

# Allow non-strict peer dependency resolutions
strict-peer-dependencies = false

# No prefix for version tags
tag-version-prefix = ""
